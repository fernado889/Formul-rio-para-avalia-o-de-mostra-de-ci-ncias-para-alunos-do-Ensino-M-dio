  <div class="center">
    <button type="button" class="btn" onclick="adicionarLinha()">‚ûï Adicionar Linha</button>
    <button type="button" class="btn" onclick="limparLinhas()">üóëÔ∏è Limpar Linhas</button>
    <button type="button" class="btn" onclick="baixarPDF()">üìÑ Baixar PDF</button>
  </div>

  <script>
    const VALOR_MAXIMO = 7;

    function adicionarLinha() {
      const tabela = document.getElementById('tabela').getElementsByTagName('tbody')[0];
      const novaLinha = tabela.insertRow();

      const colunas = [
        '<input type="text" value="1¬∫ Ano - 101">',
        '<input type="text" class="nome-aluno">',
        '<input type="text">',
        '<input type="text">',
        '<input type="text">',
        '<input type="text">',
        `<input
          type="number"
          value="0"
          step="0.1"
          min="0"
          max="${VALOR_MAXIMO}"
          oninput="atualizarPorcentagemEMedia()"
        >`,
        '<input type="text" value="0%" readonly />',
      ];

      for (let i = 0; i < colunas.length; i++) {
        const celula = novaLinha.insertCell(i);
        celula.innerHTML = colunas[i];
      }
    }

    function limparLinhas() {
      const tbody = document.getElementById('tabela').getElementsByTagName('tbody')[0];
      tbody.innerHTML = '';
      atualizarPorcentagemEMedia();
    }

    function atualizarPorcentagemEMedia() {
      const tabela = document.getElementById('tabela');
      const linhas = tabela.getElementsByTagName('tbody')[0].rows;

      let somaNotas = 0;
      let totalNotas = 0;

      for (let i = 0; i < linhas.length; i++) {
        const inputNota = linhas[i].cells[6].querySelector('input[type="number"]');
        const inputPorcentagem = linhas[i].cells[7].querySelector('input[type="text"]');

        let nota = parseFloat(inputNota.value);
        if (isNaN(nota) || nota < 0) {
          nota = 0;
          inputNota.value = 0;
        } else if (nota > VALOR_MAXIMO) {
          nota = VALOR_MAXIMO;
          inputNota.value = VALOR_MAXIMO;
        }

        const porcentagem = (nota / VALOR_MAXIMO) * 100;
        inputPorcentagem.value = porcentagem.toFixed(1) + '%';

        somaNotas += nota;
        totalNotas++;
      }

      const media = totalNotas ? somaNotas / totalNotas : 0;
      const mediaPorcentagem = (media / VALOR_MAXIMO) * 100;

      const mediaContainer = document.getElementById('mediaContainer');
      mediaContainer.textContent =
        `M√©dia das Notas: ${media.toFixed(2)} (${mediaPorcentagem.toFixed(1)}%)`;
    }

    function baixarPDF() {
      const clone = document.getElementById('areaPDF').cloneNode(true);
      const inputs = clone.querySelectorAll('input');
      inputs.forEach((input) => {
        const span = document.createElement('span');
        span.textContent = input.value;
        input.parentNode.replaceChild(span, input);
      });

      const opt = {
        margin: 0.5,
        filename: 'avaliacao-mostra-ciencias.pdf',
        image: { type: 'jpeg', quality: 0.98 },
        html2canvas: { scale: 2 },
        jsPDF: { unit: 'in', format: 'a4', orientation: 'landscape' },
      };

      html2pdf().from(clone).set(opt).save();
    }

    // Atualiza porcentagem e m√©dia logo ao carregar a p√°gina
    window.onload = () => {
      atualizarPorcentagemEMedia();
    };
  </script>
